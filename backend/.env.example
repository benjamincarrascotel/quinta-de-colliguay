NODE_ENV=development
PORT=8000

# Database
DATABASE_URL="postgresql://postgres:secret@postgres:5432/quinta_colliguay?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Email (SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASSWORD=
MAIL_FROM_ADDRESS=reservas@quintacolliguay.cl
MAIL_FROM_NAME="Quinta de Colliguay"

# Admin Notification
ADMIN_EMAIL=admin@quintacolliguay.cl
ADMIN_WHATSAPP=912345678

# Reservation Parameters
RESERVATION_ADULT_PRICE=20000
RESERVATION_CHILD_PRICE=10000
RESERVATION_MIN_ADULTS=20
RESERVATION_MAX_TOTAL=60
RESERVATION_MIN_NIGHTS=2
RESERVATION_BUFFER_HALF_DAY=true
RESERVATION_CHILD_MAX_AGE=10
RESERVATION_CANCELLATION_REFUNDABLE_DAYS=7

# Timezone
TZ=America/Santiago
