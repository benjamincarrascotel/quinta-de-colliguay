#--------------------------------------------------------------------------
# Application Environment
#--------------------------------------------------------------------------
#
# The environment your application is running in. This can be local,
# production, staging, etc. This value determines which services and
# configuration options are used.
#
APP_NAME=SolidBaseTemplate
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://solid_base_template.solidcore.cl
APP_PORT=8000

#--------------------------------------------------------------------------
# Internationalization & Localization
#--------------------------------------------------------------------------
#
APP_TIMEZONE=America/Santiago
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

#--------------------------------------------------------------------------
# Maintenance Mode
#--------------------------------------------------------------------------
#
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

#--------------------------------------------------------------------------
# PHP CLI Server
#--------------------------------------------------------------------------
#
PHP_CLI_SERVER_WORKERS=4

#--------------------------------------------------------------------------
# Hashing
#--------------------------------------------------------------------------
#
BCRYPT_ROUNDS=12

#--------------------------------------------------------------------------
# Logging
#--------------------------------------------------------------------------
#
# Available channels: stack, single, daily, slack, syslog,
# errorlog, monolog, custom, null
#
LOG_CHANNEL=pretty-daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

#--------------------------------------------------------------------------
# Database
#--------------------------------------------------------------------------
#
# Default connection for Laravel Sail is pgsql.
# The host should match the service name in docker-compose.yml.
#
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=base_template_production
DB_USERNAME=production_db_user
DB_PASSWORD=your_strong_production_password

#--------------------------------------------------------------------------
# Session
#--------------------------------------------------------------------------
#
# Supported drivers: "file", "cookie", "database", "apc",
# "memcached", "redis", "dynamodb", "array".
#
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=true

#--------------------------------------------------------------------------
# Broadcasting, Filesystem & Queue
#--------------------------------------------------------------------------
#
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

#--------------------------------------------------------------------------
# Caching
#--------------------------------------------------------------------------
#
# Supported stores: "apc", "array", "database", "file",
# "memcached", "redis", "dynamodb", "octane", "null"
#
CACHE_STORE=database
# CACHE_PREFIX=

#--------------------------------------------------------------------------
# Memcached & Redis
#--------------------------------------------------------------------------
#
MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#--------------------------------------------------------------------------
# Mail
#--------------------------------------------------------------------------
#
# For local development, 'log' or 'mailpit' (if using Sail) are good options.
#
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=email_sender@example.com
MAIL_PASSWORD="password"
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="email_sender@example.com"
MAIL_FROM_NAME="${APP_NAME}"

#--------------------------------------------------------------------------
# AWS S3
#--------------------------------------------------------------------------
#
# Credentials for AWS S3 file storage.
#
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

#--------------------------------------------------------------------------
# Vite
#--------------------------------------------------------------------------
#
# Vite behavior is controlled by APP_ENV:
#   - APP_ENV=local: Vite dev server runs with HMR
#   - APP_ENV=development/production: Vite builds assets once
#
# Laravel auto-detects dev server availability and uses built assets as fallback
#
VITE_APP_NAME="${APP_NAME}"
VITE_HMR_HOST=
VITE_CORS_ALLOW_ALL=

#--------------------------------------------------------------------------
# SSL / Certbot
#--------------------------------------------------------------------------
#
SSL_DOMAIN=solid_base_template.solidcore.cl
SSL_EMAIL=admin@solidcore.cl
CERTBOT_WEBROOT=/var/www/certbot

#--------------------------------------------------------------------------
# Xdebug
#--------------------------------------------------------------------------
#
# Xdebug mode can be 'debug', 'develop', 'off'.
#
XDEBUG_MODE=off

#--------------------------------------------------------------------------
# Docker & Supervisord
#--------------------------------------------------------------------------
#
DOCKER_LARAVEL_SERVICE_NAME=app
DOCKER_DB_SERVICE_NAME=db
WWWGROUP=1000
WWWUSER=1000
